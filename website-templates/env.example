# Portfolio Website Environment Variables
# ========================================
# Copy this file to `.env` and fill in your actual values.
# NEVER commit the actual `.env` file to git!

# ========================================
# CHAT INTEGRATION (n8n)
# ========================================
# Your n8n chat webhook URL
# Format: https://your-n8n-domain.com/webhook/your-webhook-uuid/chat
VITE_CHAT_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-webhook-id/chat

# ========================================
# SUPABASE (if needed for future features)
# ========================================
# Your Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous/public key (safe for frontend)
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ========================================
# FEATURE FLAGS
# ========================================
# Enable/disable the chat widget
VITE_ENABLE_CHAT=true

# Enable/disable analytics (future)
VITE_ENABLE_ANALYTICS=false

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Set to 'development' or 'production'
VITE_APP_ENV=development
