# DeepEval API - Environment Variables Template
# Copy this to .env and fill in your actual values

# API Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=False
HOST=0.0.0.0
PORT=8000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication - Set secure API keys here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
API_KEYS=your-api-key-1,your-api-key-2

# DeepEval Configuration (optional - only if using DeepEval cloud features)
DEEPEVAL_API_KEY=your-deepeval-api-key-here

# LLM Provider API Keys (add the ones you'll use)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# Logging
LOG_LEVEL=INFO
