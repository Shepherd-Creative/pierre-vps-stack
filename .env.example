# ===========================================
# Pierre VPS Docker Stack - Environment Variables
# ===========================================
# Copy this to .env.local for local development
# Production values are set on the VPS directly

# -- n8n Settings --
N8N_HOST=n8n.example.com
WEBHOOK_URL=https://n8n.example.com/

# -- Neo4j (shared by LightRAG and Graphiti) --
NEO4J_PASSWORD=CHANGE_ME_NEO4J_PASSWORD

# -- Graphiti Settings --
OPENAI_API_KEY=sk-your-openai-key-here
GRAPHITI_MODEL=gpt-4.1-mini
GRAPHITI_GROUP_ID=my_portfolio

# -- Supabase Settings --
SUPABASE_DB_PASSWORD=supabase_secure_db_password_2025
SUPABASE_JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long
SUPABASE_ANON_KEY=REDACTED_SUPABASE_ANON_JWT
SUPABASE_SERVICE_KEY=REDACTED_SUPABASE_SERVICE_JWT
SUPABASE_EXTERNAL_URL=https://supabase.brandiron.co.za
REALTIME_SECRET_KEY=REDACTED_REALTIME_KEY

# -- SMTP Settings --
SMTP_EMAIL=user@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-app-password-here

# -- Grafana --
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
